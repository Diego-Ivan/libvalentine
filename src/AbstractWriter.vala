public abstract class Valentine.AbstractWriter : Object {
    public virtual Valentine.WriteMode write_mode { get; set; }
    public virtual Valentine.SeparatorMode separator_mode { get; set; }

    /**
     * Writes a CSV string based on the information given to this
     *
     */
    public abstract string to_string ();

    /**
     * Saves the string generated by #this to the given path
     *
     * @param path The expected file path.
     *
     */
    public virtual void save_to_file (string path) throws Error {
        FileUtils.set_contents (path, to_string ());
    }
}
